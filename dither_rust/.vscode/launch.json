  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'dither'",
      "cargo": {
        "args": ["build", "--bin=dither", "--package=dither"],
        "filter": {
          "name": "dither",
          "kind": "bin"
        }
      },
      "args": ["../images/anamanaguchi-power-supply.png"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'dither'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=dither", "--package=dither"],
        "filter": {
          "name": "dither",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
